<%- include('../Partials/header'); -%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=camp.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%=camp.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[url]" value="<%=camp.url%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" value="<%=camp.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-lg">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%=camp._id%>">Go Back</a>
        </div>
    </div>
</div>
<%- include('../Partials/footer'); -%>