<%- include('../Partials/header'); -%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Camp Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" min="0.01" step="0.01" placeholder="price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="url" placeholder="Camp Image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Camp description">
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-lg">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<%- include('../Partials/footer'); -%>